---
title: Blog
layout: default
---

{% if site.posts.size == 0 %}
  <h2>No post found</h2>
{% endif %}

<div class="posts">
  {% for post in paginator.posts %}
    <article class="post">
      <div>
        <span class="date">
          {{ post.date | date: "%b %d, %Y" }}
        </span>
        <ul class="tag">
          {% for tag in post.tags %}
          <li>
            <a href="{{ site.url }}{{ site.baseurl }}/tags#{{ tag }}">
              {{ tag }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>
      <h2>
        <a href="{{ site.baseurl }}{{ post.url }}">{{ post.title }}</a>
      </h2>
      <div class="entry">
        <div class="excerpt">
          {% if post.image %}
            {% unless post.image == empty %}
            <div class="excerpt-image">
              <img src="{{post.image}}" />
            </div>
            {% endunless %}
          {% endif %}
          {{ post.excerpt }}
          <span class="read-more">
            <a href="{{ site.baseurl }}{{ post.url }}">[continue reading...]</a>
          </span>
        </div>

      </div>
    </article>
  {% endfor %}
</div>

<div class="pagination">
  {% if paginator.next_page %}
    <span class="prev">
      <a href="{{ site.baseurl}}{{ paginator.next_page_path }}">
      <button>← Older Posts</button>
      </a>
    </span>
  {% endif %}
  {% if paginator.previous_page %}
    <span class="next">
      <a href="{{ site.baseurl }}{{ paginator.previous_page_path }}">
        <button>Newer Posts →</button>
      </a>
    </span>
  {% endif %}
</div>
